ruby '2.1.0'

source 'https://rubygems.org'

gem 'rails', '>= 4.0'

group :development do
  gem 'debugger'
  gem 'lipsum'
  gem 'pry-rails'
  gem 'guard-rails'
  gem 'guard-rspec'
end

group :test do
  gem 'rspec-rails'
  gem 'rspec-mocks'
  gem 'capybara'
  gem 'simplecov'
  gem 'coveralls', require: false, github: 'lemurheavy/coveralls-ruby'
end

