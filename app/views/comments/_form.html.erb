<%= form_for comment, remote: true do |form| %>
  <%= form.hidden_field :recipe_id, value: recipe.id %>
  <%= form.hidden_field :user_id, value: comment.user_id %>

  <div class='form-group'>
    <%= form.text_area :body, class: 'form-control', rows: '5' %>
  </div>

  <div class='actions'>
    <%= form.submit class: 'btn btn-default' %>
  </div>
<% end %>
