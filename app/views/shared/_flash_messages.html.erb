<% flash.each do |key, values| %>
  <% values = [values] unless values.respond_to? :each %>
  <% values.each do |value| %>
    <div class='alert alert-dismissable alert-<%= flash_class(key) %>'>
      <button type="button"
        class="close"
        data-dismiss="alert"
        aria-hidden="true">
        &times;
      </button>
      <%= value %>
    </div>
  <% end %>
<% end %>
