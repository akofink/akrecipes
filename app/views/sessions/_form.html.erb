<%= form_tag sessions_path, class: 'form-horizontal' do %>
  <fieldset class='col-md-5'>
    <div class="form-group input-group">
      <span class='input-group-addon'><i class="icon-envelope-alt"></i></span>
      <%= text_field_tag :email, '', placeholder: "email", class: 'form-control' %>
    </div>

    <div class="form-group input-group">
      <span class='input-group-addon'><i class="add-on icon-key"></i></span>
      <%= password_field_tag :password, 
        '',
        placeholder: "password",
        class: 'form-control'
      %>
    </div>
    <div class="actions">
      <%= submit_tag :Login, class: 'btn' %>
    </div>
  </fieldset>
<% end %>
