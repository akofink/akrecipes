<%= render 'errors' %>
<%= form_tag sessions_path do %>
  <fieldset>
    <div class="field controls-row span5">
      <%= text_field_tag :email, '', placeholder: "email" %>
    </div>

    <div class="field controls-row span5">
      <%= password_field_tag :password, 
        '',
        placeholder: "password"
      %>
    </div>
  </div>
  <div class="actions span5">
    <%= submit_tag :login, class: 'btn' %>
  </div>
</fieldset>
<% end %>
