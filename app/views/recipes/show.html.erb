<legend>
  <%= @recipe.title %>
</legend>

<%= render 'image_carousel' %>

<div class='body-text'>
  <%= md @recipe.body %>
</div>

<%= link_to :root do %>
  <i class='icon-arrow-left'></i> Back
<% end %>

<% if current_user && @recipe.user == current_user %>
  <%= link_to edit_recipe_path(@recipe) do %>
    <i class='icon-pencil'></i> Edit
  <% end %>
<% end %>

<%= render 'comments' %>
