<legend>
  <%= @recipe.title %>
</legend>

<div class='body-text'>
  <%= md @recipe.body %>
</div>

<% @recipe.images.each do |image| %>
  <%= image_tag image.data %>
<% end %>

<%= link_to :root do %>
  <i class='icon-arrow-left'></i> Back
<% end %>

<% if allow? 'recipes', 'edit' %>
  <%= link_to edit_recipe_path(@recipe) do %>
    <i class='icon-pencil'></i> Edit
  <% end %>
<% end %>
