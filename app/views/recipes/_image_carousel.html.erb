<div class="col-md-6 col-sm-6 col-xs-12">
  <div id="recipe-carousel" class="carousel slide">
    <% if @recipe.images.count > 1 %>
      <ol class="carousel-indicators">
        <% @recipe.images.each_with_index do |image, i| %>
          <li data-target="#recipe-carousel" data-slide-to="<%= i %>" class="<%= 'active' if image == @recipe.images.first %>"></li>
        <% end %>
      </ol>
    <% end %>

    <!-- Carousel items -->
    <div class="carousel-inner">
      <% @recipe.images.each do |image| %>
        <div class="item <%= 'active' if image == @recipe.images.first %>">
          <%= image_tag image.data, class: 'img-responsive' %>
        </div>
      <% end %>
    </div>

    <!-- Carousel nav -->
    <% if @recipe.images.count > 1 %>
      <a class="left carousel-control" href="#recipe-carousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="right carousel-control" href="#recipe-carousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    <% end %>
  </div>
</div>
