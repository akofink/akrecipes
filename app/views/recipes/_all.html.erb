<div class='container'>
  <div class='container col-md-12'>
    <div class='col-md-2'>
    </div>
    <%= will_paginate @recipes, class: 'pagination col-md-8 text-center' %>
    <div class='col-md-2'></div>
  </div>
  <% @recipes.each do |recipe| %>
    <% if @recipes.index(recipe) % 4 == 0 %><div class='row'><% end %>
      <div class='col-md-3'>
        <%= link_to recipe, class: 'no-style' do %></td>
        <div class="thumbnail">
          <h4><%= recipe.title.split(' ')[0..4].join(' ')[/.+[^,:;\.]/].try :html_safe %></h4>
          <%= image_tag recipe.random_thumbnail_url, class: 'img-responsive img-thumbnail' %>
        </div>
      <% end %>
    </div>
    <% if @recipes.index(recipe) % 4 == 3 %></div><% end %>
<% end %>
<%= will_paginate @recipes, class: 'pagination col-md-12 text-center' %>
</div>
