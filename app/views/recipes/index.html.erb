<table class='table table-hover'>
  <thead>
    <tr>
      <th>Recipes</th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr class='table-link'>
        <td><%= link_to recipe.title, recipe, class: 'no-style button-link' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
  <%= link_to new_recipe_path do %>
    <i class='icon-plus-sign'></i> New Recipe
  <% end %>
<% end %>
