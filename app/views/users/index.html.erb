<% legend 'All Users' %>
<table class='table table-hover'>
  <thead>
    <tr>
      <th>Id</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class='table-link'>
        <td><%= user.id %></td>
        <td><%= link_to user.email, user, class: 'no-style button-link' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_user_path do %>
  <i class='icon-plus-sign'></i> New User
<% end %>
