<%= form_for @user do |f| %>
  <fieldset class='span11'>
    <div class="field controls-row">
      <span class='input-prepend'>
        <i class="add-on icon-envelope-alt"></i>
        <%= f.text_field :email, placeholder: "email" %>
      </span>
    </div>
    <div class="field">
      <span class='input-prepend'>
        <i class="add-on icon-key"></i>
        <%= f.password_field :password, 
          placeholder: "password", 
          title: 'At least one upper case, one lower case, and one non-letter',
          class: "instant-tooltip",
            'data-container' => 'body'
        %>
      </span>
    </div>
    <div class="field controls-row">
      <span class='input-prepend'>
        <i class="add-on icon-key"></i>
        <%= f.password_field :password_confirmation, 
          placeholder: "password_confirmation", 
          title: 'At least one upper case, one lower case, and one non-letter',
          class: "instant-tooltip",
          'data-container' => 'body'
        %>
      </span>
    </div>
    <div class="actions">
      <%= f.submit class: 'btn' %>
    </div>
  </fieldset>
<% end %>
