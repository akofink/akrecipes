<h1>Editing user</h1>

<div class='col-md-6'>
  <%= render 'form' %>

  <%= link_back do %>
    <%= fa_icon 'arrow-left', text: 'Back' %>
  <% end %>

  <%= link_to @user do %>
    <%= fa_icon 'ban', text: 'Cancel' %>
  <% end %>

  <%= link_to @user, method: :delete, confirm: 'Delete your account?' do %>
    <%= fa_icon 'times', text: 'Delete' %>
  <% end %>
</div>
