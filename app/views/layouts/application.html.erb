<!DOCTYPE html>
<html>
  <head>
    <title>Recipes</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'shared/header' %>
    </header>

    <div class='container'>
      <div class='row'>
        <div class='col-md-8'>
          <%= render 'shared/flash_messages' %>
        </div>

        <%= yield %>
      </div>
    </div>

  </body>
</html>
